<div class="card mb-3">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center">
      <h5 class="card-title"><%= task_list.name %></h5>
      <div class="btn-group">
        <%= link_to edit_task_list_path(task_list), class: "btn btn-sm btn-outline-primary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
        <%= link_to task_list_path(task_list),
            method: :delete,
            data: { confirm: 'Are you sure?' },
            class: "btn btn-sm btn-outline-danger" do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </div>
    </div>
    <p class="card-text text-muted"><%= pluralize(task_list.tasks.count, 'task') %></p>
    <div class="progress">
      <div class="progress-bar" role="progressbar"
           aria-valuenow="<%= task_list.completion_percentage %>"
           aria-valuemin="0"
           aria-valuemax="100">
        <%= task_list.completion_percentage %>%
      </div>
    </div>
  </div>  </div>
</div>
