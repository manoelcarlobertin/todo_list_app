<div id="<%= dom_id task_list %>">
  <p>
    <strong>Tarefa:</strong>
    <%= task_list.title %>
  </p>

  <p>
    <strong>Usuário:</strong>
    <%= task_list.user_id %>
  </p>

  <p>
    <strong>Ações:</strong>
    <% if task_list.user_id==current_user.id do %>
      <%= link_to 'Adicionar Tarefa', new_task_path(task_list), class: 'btn btn-primary' %>
      <%= link_to 'Editar' , edit_task_list_path(task_list), class: 'btn btn-secondary' %>
      <%= link_to 'Deletar' , task_list, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-danger' %>
    <% end %>
      <br>
      <hr>
  </p>

</div>
